{
  "manifest_version": 2,

  "name": "Lichess move announce (Spanish version)",
  "description": "Esta extensi√≥n anuncia movimientos hablando en la web de Lichess",
  "version": "0.1",
"icons": {"48": "icon48.png" },
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "config.html"
  },
  "content_scripts": [
        {
            "matches": [
                "http://*.lichess.org/*",
                "https://*.lichess.org/*"
            ],
            "js": [
                "scripts/jquery-1.12.1.min.js",
                "scripts/bootstrap2-toggle.min.js",
                "scripts/lichess.js",
                "scripts/config.js"
            ],
            "css": [
                "css/bootstrap2-toggle.min.css"
            ],
            "run_at": "document_end",
            "all_frames": false
        }
    ],
    "web_accessible_resources": [
        "sounds/*"
    ],
    "permissions": [
        "activeTab",
        "storage"
    ]

}
